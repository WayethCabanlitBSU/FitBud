<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitbud">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitBud">

        <!-- âœ… SplashActivity is now the launcher -->
        <activity android:name=".splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login screen -->
        <activity android:name=".LoginActivity" />

        <!-- Signup screen -->
        <activity android:name=".SignupActivity" />

        <!-- Main app screen (after login) -->
        <activity android:name=".MainActivity" />

        <!-- Workout screen -->
        <activity android:name=".WorkoutActivity" />

        <!-- Settings screen -->
        <activity android:name=".SettingsActivity" />

        <activity android:name=".BMICalculatorActivity" />

        <activity android:name=".WorkoutTimerActivity" />



    </application>
</manifest>
